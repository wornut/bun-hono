{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["**/*.docgen.ts"],
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn"
			},
			"style": {
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": ["snake_case"]
					}
				}
			}
		}
	},
	"formatter": {
		"indentWidth": 4,
		"indentStyle": "tab",
		"ignore": ["**/*.docgen.ts", "out/"]
	}
}
